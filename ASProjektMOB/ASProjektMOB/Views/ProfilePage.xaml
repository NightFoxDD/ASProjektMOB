<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ASProjektMOB.Views.ProfilePage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#e0e0e0"
             >
    <ContentPage.Resources>
        <Style TargetType="Label" x:Key="Lbl_Text">
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>
        <Style TargetType="Entry" x:Key="Etry_Text">
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button" x:Key="Btn_Edit">
            <Setter Property="BackgroundColor" Value="#e8e8e8"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="BorderColor" Value="Black"/>
            <Setter Property="BorderWidth" Value="1"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Padding="10" BackgroundColor="Transparent" Margin="20,100,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackLayout>
                        <Frame BackgroundColor="Transparent" Padding="0" CornerRadius="15" HeightRequest="100" WidthRequest="100" HorizontalOptions="Start">
                            <Image x:Name="I_UserPfp" Aspect="Fill" Source="icon_defaultpfp.png"/>
                        </Frame>
                        <Button x:Name="Btn_EditPfp" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Text="Edytuj zdjęcie" Clicked="Btn_EditPfp_Click" IsVisible="false"/>
                    </StackLayout>
                    
                   
                </Grid>
                <Frame Grid.Row="1" BackgroundColor="#b7b7b7" Padding="0" CornerRadius="15" Margin="20,0,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Dane osobowe" FontSize="25" HorizontalOptions="Start" TextColor="Black" VerticalOptions="Center" Margin="10"/>
                        <Button x:Name="Btn_Edit_UserData" Text="Edytuj" Grid.Column="1" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_Edit_UserData_Clicked"/>
                        <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="#e8e8e8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Imie:"  Style="{StaticResource Lbl_Text}"/>
                                <Entry x:Name="Etr_Name" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                <Label x:Name="Lbl_Name" Grid.Column="1" Style="{StaticResource Lbl_Text}"/>
                                <Label Grid.Row="1" Text="Nazwisko:"  Style="{StaticResource Lbl_Text}"/>
                                <Entry x:Name="Etr_Surname" Grid.Row="1" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                <Label x:Name="Lbl_Surname" Grid.Row="1" Grid.Column="1" Style="{StaticResource Lbl_Text}"/>
                                <Label Grid.Row="2" Text="Aktualne stanowisko:"  Style="{StaticResource Lbl_Text}"/>
                                <Entry x:Name="Etr_CurrentOccupation" Grid.Row="2" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                <Label x:Name="Lbl_CurrentOccupation" Grid.Row="2" Grid.Column="1" Style="{StaticResource Lbl_Text}"/>
                                <Label Grid.Row="3" Text="Państwo:"  Style="{StaticResource Lbl_Text}"/>
                                <Picker x:Name="Pckr_Country" TextColor="Black" Grid.Row="3" Grid.Column="1"/>
                                <Label x:Name="Lbl_Country" Grid.Row="3" Grid.Column="1" Style="{StaticResource Lbl_Text}"/>
                                <Label Grid.Row="4" Text="Miasto:"  Style="{StaticResource Lbl_Text}"/>
                                <Entry x:Name="Etr_City" Grid.Row="4" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                <Label x:Name="Lbl_City" Grid.Row="4" Grid.Column="1" Style="{StaticResource Lbl_Text}"/>
                                <Button x:Name="Btn_Cancel_UserData" Text="Annuluj" Grid.Row="5" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_Cancel_UserData_Clicked"/>
                                <Button x:Name="Btn_Save_UserData" Text="Zapisz" Grid.Column="1" Grid.Row="5" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_Save_UserData_Clicked"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </Frame>
                <Frame Grid.Row="2" BackgroundColor="#b7b7b7" Padding="0" CornerRadius="15" Margin="20,20,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Dane kontaktowe" FontSize="25" HorizontalOptions="Start" TextColor="Black" VerticalOptions="Center" Margin="10"/>
                        <Button x:Name="Btn_Edit_ContactData" Text="Edytuj" Grid.Column="1" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_Edit_ContactData_Clicked"/>
                        <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="#e8e8e8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Text="E-mail:"  Style="{StaticResource Lbl_Text}"/>
                                <Entry x:Name="Etr_Email" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                <Label x:Name="Lbl_Email" Grid.Column="1" Style="{StaticResource Lbl_Text}"/>
                                <Label Grid.Row="1" Text="Numer telefonu:"  Style="{StaticResource Lbl_Text}"/>
                                <Entry x:Name="Etr_PhoneNumber" Grid.Row="1" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                <Label x:Name="Lbl_PhoneNumber" Grid.Row="1" Grid.Column="1" Style="{StaticResource Lbl_Text}"/>
                                <Label Grid.Row="2" Text="Data urodzenia:"  Style="{StaticResource Lbl_Text}"/>
                                <DatePicker x:Name="Etr_BirthDate" Grid.Row="2" Grid.Column="1" />
                                <Label x:Name="Lbl_BirthDate" Grid.Row="2" Grid.Column="1" Style="{StaticResource Lbl_Text}"/>
                                <Button x:Name="Btn_Cancel_ContactData" Text="Annuluj" Grid.Row="3" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_Cancel_ContactData_Clicked"/>
                                <Button x:Name="Btn_Save_ContactData" Text="Zapisz" Grid.Column="1" Grid.Row="3" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_Save_ContactData_Clicked"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </Frame>
                <Frame Grid.Row="3" BackgroundColor="#b7b7b7" Padding="0" CornerRadius="15" Margin="20,20,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="90"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Doświadczenie zawodowe" FontSize="25" HorizontalOptions="Start" TextColor="Black" VerticalOptions="Center" Margin="10"/>
                        <Button x:Name="Btn_AddFrom_ExperienceWork" Text="Dodaj nowy" Grid.Column="1" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_AddFrom_ExperienceWork_Clicked"/>
                        <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="#e8e8e8">
                            <StackLayout>
                                <Grid x:Name="G_ExperienceWorkForm">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="Stanowisko:"  Style="{StaticResource Lbl_Text}"/>
                                    <Entry x:Name="Etr_Position" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Label Text="Lokalizacja:" Grid.Row="1"  Style="{StaticResource Lbl_Text}"/>
                                    <Entry x:Name="Etr_Localization" Grid.Row="1" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Label Text="Nazwa firmy:" Grid.Row="2" Style="{StaticResource Lbl_Text}"/>
                                    <Entry x:Name="Etr_CompanyName" Grid.Row="2" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Label Text="Od:" Grid.Row="3" Style="{StaticResource Lbl_Text}"/>
                                    <DatePicker x:Name="DP_StartPeriod" TextColor="Black" Grid.Row="3" Grid.Column="1"/>
                                    <Label Text="Do:" Grid.Row="4" Style="{StaticResource Lbl_Text}"/>
                                    <DatePicker x:Name="DP_EndPeriod" TextColor="Black" Grid.Row="4" Grid.Column="1"/>
                                    <Label Text="Obowiązki:" Grid.Row="5" Style="{StaticResource Lbl_Text}"/>
                                    <Editor x:Name="Etr_Responsibilities" TextColor="Black" Grid.Row="5" Grid.Column="1"/>
                                    <Button x:Name="Btn_Cancel_ExperienceWork" Text="Annuluj" Grid.Row="6" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Btn_Cancel_ExperienceWork_Clicked"/>
                                    <Button x:Name="Btn_Add_ExperienceWork" Text="Dodaj" Grid.Row="6" Grid.Column="1" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Btn_Add_ExperienceWork_Clicked"/>
                                </Grid>
                                <ListView SelectionMode="None" x:Name="LV_ExperienceWork" RowHeight="200">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Frame Padding="2" BackgroundColor="#b7b7b7" CornerRadius="15" Margin="0,10,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <StackLayout>
                                                            <Label TextColor="Black" Text="{Binding Position}" Margin="10,0,0,0"/>
                                                            <Label Text="{Binding StartPayment,StringFormat=' / {0:MMMM yyyy} - '}" TextColor="Gray" Margin="10,0,0,0"/>
                                                            <Label TextColor="Gray" Margin="10,0,0,0">
                                                                <Label.Style>
                                                                    <Style TargetType="Label">
                                                                        <Setter Property="Text" Value="{Binding EndPayment, StringFormat='{}{0:MMMM yyyy}'}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger TargetType="Label" Binding="{Binding EndPayment,StringFormat='{}{0:}'}" Value="{x:Null}">
                                                                                <Setter Property="Text" Value="Obecnie"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Label.Style>
                                                            </Label>
                                                        </StackLayout>
                                                        <Button x:Name="Del_ExperienceWorkItem" Grid.Column="1" Text="Usuń" Margin="10" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Del_ExperienceWorkItem_Clicked" CommandParameter="{Binding .}"/>
                                                        <Button x:Name="Edit_ExperienceWorkItem" Grid.Column="1" Grid.Row="1" Margin="10" Text="Edytuj" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Edit_ExperienceWorkItem_Clicked" CommandParameter="{Binding .}"/>
                                                        <StackLayout Grid.Row="1" Orientation="Horizontal" Margin="10,0,0,0">
                                                            <Label Text="{Binding Company}">
                                                                <Label.Style>
                                                                    <Style TargetType="Label">
                                                                        <Setter Property="Text" Value="{Binding Company}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger TargetType="Label" Binding="{Binding Company}" Value="{x:Null}">
                                                                                <Setter Property="Text" Value="Brak Firmy"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Label.Style>
                                                            </Label>
                                                            <Label TextColor="Gray" Margin="10,0,0,0">
                                                                <Label.Style>
                                                                    <Style TargetType="Label">
                                                                        <Setter Property="Text" Value="{Binding Localization,StringFormat=' ({0})'}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger TargetType="Label" Binding="{Binding Localization}" Value="{x:Null}">
                                                                                <Setter Property="Text" Value="Brak lokalizacji"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Label.Style>
                                                            </Label>
                                                        </StackLayout>
                                                        <Label Text="{Binding Responsibilities}" Grid.ColumnSpan="2" Grid.Row="2" Margin="10,0,0,0"/>
                                                    </Grid>
                                                </Frame>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </Frame>
                <Frame Grid.Row="4" BackgroundColor="#b7b7b7" Padding="0" CornerRadius="15" Margin="20,20,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Wykształcenie" FontSize="25" HorizontalOptions="Start" TextColor="Black" VerticalOptions="Center" Margin="10"/>
                        <Button x:Name="Btn_AddFrom_Education" Text="Dodaj nowy" Grid.Column="1" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_AddFrom_Education_Clicked"/>
                        <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="#e8e8e8">
                            <StackLayout>
                                <Grid x:Name="G_EducationForm">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="Nazwa szkoły:"  Style="{StaticResource Lbl_Text}"/>
                                    <Entry x:Name="Etr_SchoolName" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Label Text="Poziom wykrztałcenia:" Grid.Row="1"  Style="{StaticResource Lbl_Text}"/>
                                    <Picker x:Name="Pck_Level" Grid.Row="1" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Label Text="Kierunek:" Grid.Row="2" Style="{StaticResource Lbl_Text}"/>
                                    <Entry x:Name="Etr_Direction" Grid.Row="2" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Label Text="Od:" Grid.Row="3" Style="{StaticResource Lbl_Text}"/>
                                    <DatePicker x:Name="DP_StartEducation" TextColor="Black" Grid.Row="3" Grid.Column="1"/>
                                    <Label Text="Do:" Grid.Row="4" Style="{StaticResource Lbl_Text}"/>
                                    <DatePicker x:Name="DP_EndEducation" TextColor="Black" Grid.Row="4" Grid.Column="1"/>
                                    <Button x:Name="Btn_Cancel_Education" Text="Annuluj" Grid.Row="6" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Btn_Cancel_Education_Clicked"/>
                                    <Button x:Name="Btn_Add_Education" Text="Dodaj" Grid.Row="6" BackgroundColor="#e8e8e8" Grid.Column="1" Style="{StaticResource Btn_Edit}" Clicked="Btn_Add_Education_Clicked"/>
                                </Grid>
                                <ListView SelectionMode="None" x:Name="LV_Education" RowHeight="160">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Frame Padding="2" BackgroundColor="#b7b7b7" CornerRadius="15" Margin="0,10,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <StackLayout>
                                                            <Label TextColor="Black" Text="{Binding ShoolName}" Margin="10,0,0,0"/>
                                                            <Label Text="{Binding StartPeriod,StringFormat=' / {0:MMMM yyyy} - '}" TextColor="Gray" Margin="10,0,0,0"/>
                                                            <Label TextColor="Gray" Margin="10,0,0,0">
                                                                <Label.Style>
                                                                    <Style TargetType="Label">
                                                                        <Setter Property="Text" Value="{Binding EndPeriod, StringFormat='{}{0:MMMM yyyy}'}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger TargetType="Label" Binding="{Binding EndPeriod,StringFormat='{}{0:}'}" Value="{x:Null}">
                                                                                <Setter Property="Text" Value="Obecnie"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Label.Style>
                                                            </Label>
                                                        </StackLayout>
                                                        <Button x:Name="Del_EducationItem" Grid.Column="1" Text="Usuń" Margin="10" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Del_EducationItem_Clicked" CommandParameter="{Binding .}"/>
                                                        <Button x:Name="Edit_EducationItem" Grid.Column="1" Grid.Row="1" Margin="10" Text="Edytuj" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Edit_EducationItem_Clicked" CommandParameter="{Binding .}"/>
                                                        <StackLayout Grid.Row="1" Orientation="Horizontal" Margin="10,0,0,0">
                                                            <Label Text="{Binding Direction}"/>
                                                            <Label Text="{Binding Level}"/>
                                                        </StackLayout>
                                                    </Grid>
                                                </Frame>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                            
                        </Frame>
                    </Grid>
                </Frame>
                <Frame Grid.Row="5" BackgroundColor="#b7b7b7" Padding="0" CornerRadius="15" Margin="20,20,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Języki" FontSize="25" HorizontalOptions="Start" TextColor="Black" VerticalOptions="Center" Margin="10"/>
                        <Button x:Name="Btn_AddFrom_Language" Text="Dodaj nowy" Grid.Column="1" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_AddFrom_Language_Clicked"/>
                        <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="#e8e8e8">
                            <StackLayout>
                                 <Grid x:Name="G_LanguageForm">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="Nazwa języka:"  Style="{StaticResource Lbl_Text}"/>
                                    <Entry x:Name="Etr_LanguageName" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Label Text="Poziom :" Grid.Row="1"  Style="{StaticResource Lbl_Text}"/>
                                    <Picker x:Name="Pck_LanguageLevel" Grid.Row="1" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Button x:Name="Btn_Cancel_Language" Text="Annuluj" Grid.Row="2" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Btn_Cancel_Language_Clicked"/>
                                    <Button x:Name="Btn_Add_Language" Text="Dodaj" Grid.Row="2" BackgroundColor="#e8e8e8" Grid.Column="1" Style="{StaticResource Btn_Edit}" Clicked="Btn_Add_Language_Clicked"/>
                                </Grid>
                                <ListView SelectionMode="None" x:Name="LV_Language" RowHeight="120">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Frame Padding="2" BackgroundColor="#b7b7b7" CornerRadius="15" Margin="0,10,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>

                                                            <Label TextColor="Black" Text="{Binding Name}" Margin="10"/>
                                                            <Label Text="{Binding Level}" TextColor="Gray" Grid.Column="1" Margin="10"/>

                                                        <Button x:Name="Del_LanguageItem" Grid.Row="1"  Text="Usuń" Margin="10" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Del_LanguageItem_Clicked" CommandParameter="{Binding .}"/>
                                                        <Button x:Name="Edit_LanguageItem" Grid.Row="1" Grid.Column="1" Margin="10" Text="Edytuj" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Edit_LanguageItem_Clicked" CommandParameter="{Binding .}"/>
                                                       
                                                    </Grid>
                                                </Frame>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                           
                        </Frame>
                    </Grid>
                </Frame>
                <Frame Grid.Row="6" BackgroundColor="#b7b7b7" Padding="0" CornerRadius="15" Margin="20,20,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Umiejętności" FontSize="25" HorizontalOptions="Start" TextColor="Black" VerticalOptions="Center" Margin="10"/>
                        <Button x:Name="Btn_AddForm_Skills" Text="Dodaj" BackgroundColor="#e8e8e8" Margin="10" Grid.Column="1" Style="{StaticResource Btn_Edit}" Clicked="Btn_AddForm_Skills_Clicked"/>
                        <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="#e8e8e8">
                            <StackLayout>
                                <Grid x:Name="G_SkillForm">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="Nazwa umiejętności:"  Style="{StaticResource Lbl_Text}"/>
                                    <Entry x:Name="Etr_SkillName" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Button x:Name="Btn_Cancel_Skills" Text="Dodaj" Grid.Row="2" BackgroundColor="#e8e8e8" Grid.ColumnSpan="2" Style="{StaticResource Btn_Edit}" Clicked="Btn_Cancel_Skills_Clicked_1"/>
                                    <Button x:Name="Btn_Add_Skills" Text="Dodaj" Grid.Row="2" BackgroundColor="#e8e8e8" Grid.ColumnSpan="2" Style="{StaticResource Btn_Edit}" Clicked="Btn_Add_Skills_Clicked"/>
                                </Grid>
                                <ListView x:Name="LV_Skills" RowHeight="75">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Frame Padding="2" BackgroundColor="#b7b7b7" CornerRadius="15" Margin="0,10,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Label Text="{Binding Name}" Margin="10" VerticalOptions="Center"/>
                                                        <Button x:Name="Del_SkillItem" Grid.Column="1" Margin="10" Text="Usuń" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Del_SkillItem_Clicked" CommandParameter="{Binding .}"/>
                                                    </Grid>
                                                </Frame>
                                            </ViewCell>
                                           
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </Frame>
                <Frame Grid.Row="7" BackgroundColor="#b7b7b7" Padding="0" CornerRadius="15" Margin="20,20,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Linki" FontSize="25" HorizontalOptions="Start" TextColor="Black" VerticalOptions="Center" Margin="10"/>
                        <Button x:Name="Btn_AddFrom_Link" Text="Dodaj nowy" Grid.Column="1" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Margin="10" Clicked="Btn_AddFrom_Link_Clicked"/>
                        <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="#e8e8e8">
                            <StackLayout>
                                <Grid x:Name="G_LinkForm">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="Adres URL:"  Style="{StaticResource Lbl_Text}"/>
                                    <Entry x:Name="Etr_URL" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Label Text="Type linku :" Grid.Row="1"  Style="{StaticResource Lbl_Text}"/>
                                    <Picker x:Name="Pck_LinkType" Grid.Row="1" Grid.Column="1" Style="{StaticResource Etry_Text}"/>
                                    <Button x:Name="Btn_Cancel_Link" Text="Annuluj" Grid.Row="2" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Btn_Cancel_Link_Clicked"/>
                                    <Button x:Name="Btn_Add_Link" Text="Dodaj" Grid.Row="2" BackgroundColor="#e8e8e8" Grid.Column="1" Style="{StaticResource Btn_Edit}" Clicked="Btn_Add_Link_Clicked"/>
                                </Grid>
                                <ListView x:Name="LV_Link" RowHeight="120" SelectionMode="None">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Frame Padding="2" BackgroundColor="#b7b7b7" CornerRadius="15" Margin="0,10,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Label Text="{Binding Name}" Margin="10"/>
                                                        <Label Text="{Binding Type}" Grid.Column="1" Margin="10"/>
                                                        <Button x:Name="Del_Link" Grid.Row="1" Margin="10" Text="Usuń" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Del_Link_Clicked" CommandParameter="{Binding .}"/>
                                                        <Button x:Name="Edit_Link" Grid.Row="1" Grid.Column="1" Margin="10" Text="Edytuj" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Edit_Link_Clicked" CommandParameter="{Binding .}"/>
                                                    </Grid>
                                                </Frame>
                                            </ViewCell>
                                          
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </Frame>
                <Frame Grid.Row="8" BackgroundColor="#b7b7b7" Padding="0" CornerRadius="15" Margin="20,20,20,70">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Zaaplikowania" FontSize="25" HorizontalOptions="Start" TextColor="Black" VerticalOptions="Center" Margin="10"/>
                        <ImageButton Source="icon_refresh.png" Grid.Column="1" Margin="10" Clicked="ImageButton_Clicked" BackgroundColor="Transparent"/>
                        <StackLayout Grid.Row="1" Grid.ColumnSpan="2">
                             <Frame  BackgroundColor="#e8e8e8">
                                <ListView SelectionMode="None" Grid.Row="1" x:Name="LV_UserApplications" Margin="10,20,10,0" HorizontalOptions="Center" RowHeight="150">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Frame CornerRadius="10" BorderColor="Black" Margin="5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="50"/>
                                                        </Grid.RowDefinitions>
                                                        <Label Text="{Binding Name}" TextColor="black" VerticalOptions="Center" Margin="10"/>
                                                        <Label Text="{Binding PositionName}" TextColor="black" VerticalOptions="Center"  Grid.Column="1" FontSize="15"/>
                                                        <Button Grid.Row="1"  VerticalOptions="Center" Text="Zobacz" CommandParameter="{Binding .}" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="GoToAnnouncment"/>
                                                        <Button Grid.Row="1" Grid.Column="1" VerticalOptions="Center" Text="Cofnij" CommandParameter="{Binding .}" BackgroundColor="#e8e8e8" Style="{StaticResource Btn_Edit}" Clicked="Btn_DeleteApplication"/>
                                                    </Grid>
                                                </Frame>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Frame>
                        </StackLayout>
                       
                    </Grid>
                </Frame>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>